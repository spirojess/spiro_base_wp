{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
  <div class="onpic {{ particle.css.class }}" style="padding:0px; background-image: url({{ particle.image }});">
    <div class="onpicopy" style="height:100%; width:100%; padding: 20px; color: {{particle.textcolor}}; background-color: {{particle.overlaycolor}}; ">{% set html = particle.twig ? gantry.theme.compile(particle.html) : particle.html %}
    {{ (particle.filter ? gantry.platform.filter(html) : html)|html|raw }}
  </div>
</div>
{% endblock %}
